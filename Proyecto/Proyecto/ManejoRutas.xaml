<Window x:Class="Proyecto.ManejoRutas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manejo de Rutas" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="379*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="376,0,0,0">
            <Button Content="Ruta 1" Click="SeleccionarRuta_Click" Tag="1" Margin="5" />
            <Button Content="Ruta 2" Click="SeleccionarRuta_Click" Tag="2" Margin="5" />
            <Button Content="Ruta 3" Click="SeleccionarRuta_Click" Tag="3" Margin="5" />
            <Button Content="Ruta 4" Click="SeleccionarRuta_Click" Tag="4" Margin="5" />
            <Button Content="Ruta 5" Click="SeleccionarRuta_Click" Tag="5" Margin="5" />
            <Button Content="Ruta 6" Click="SeleccionarRuta_Click" Tag="6" Margin="5" />
        </StackPanel>
        <Button Content="Modificar Rutas" Click="ModificarRutas_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Grid.ColumnSpan="2" />
    </Grid>

</Window>


    
